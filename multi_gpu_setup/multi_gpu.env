# Multi-GPU Configuration for Orpheus TTS

# Number of GPUs to use (adjust based on your system)
NUM_GPUS=8

# Base port for the first instance (others will be BASE_PORT+1, BASE_PORT+2, etc.)
BASE_PORT=9090

# Load balancer port (nginx will listen on this port)
LB_PORT=8080

# Model configuration (same for all instances)
MODEL_NAME=TrySalient/tts-collections-test-verbalized

# TensorRT-LLM Configuration
TRT_DTYPE=bfloat16
TRT_MAX_BATCH_SIZE=12
TRT_MAX_INPUT_LEN=1024
TRT_MAX_SEQ_LEN=8192
TRT_MAX_TOKENS=2500
TRT_FREE_GPU_MEMORY_FRACTION=0.85

# Generation parameters
TRT_TEMPERATURE=0.1
TRT_TOP_P=0.95
TRT_REPETITION_PENALTY=1.1
TRT_STOP_TOKEN_IDS=128258

# Paths
# HF_HOME will be set dynamically to $HOME/.cache/huggingface
LOG_DIR=./logs
PID_DIR=./pids
